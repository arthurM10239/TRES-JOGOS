	printf("%c", furia);
	}
	SetConsoleTextAttribute(hConsole, 7);
	printf("  %c", 174);
	//gousma1 p2
	//gousma2 p2
	if(player2G2 == 0){
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                     P2*GOUSMA(G2)   ");
	}
	
	else if(player2G2 == 1){
	SetConsoleTextAttribute(hConsole, 8);	
	printf("\n                   X");	
	printf(" P2*GOUSMA(G2) ");
	printf("X ");
		
	}
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria4; a++){
	printf("%c", furia);
	}
	//gousma2 p2
	
	SetConsoleTextAttribute(hConsole, 11);
	printf("\n\n  %c DIVIDIR %c\n", 155, 155);
	SetConsoleTextAttribute(hConsole, 7);
	
		
		break;
	
	
	
	
	
	
	case 1:
		
	//GOUSMA ESCOLHIDA	
	SetConsoleTextAttribute(hConsole, 4 );
	printf("\n { %c ATACAR %c } >> ", 158, 158);
	SetConsoleTextAttribute(hConsole, 2);
	
	
	if(gousmaE == 1){
	printf("{ P1*GOUSMA(G1) } ");
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria1; a++){
	printf("%c", furia);
	}
	
	if(player1G2 == 0){
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                     P1*GOUSMA(G2)   ");
	}
	
	else if(player1G2 == 1){
	SetConsoleTextAttribute(hConsole, 8);	
	printf("\n                   X");	
	printf(" P1*GOUSMA(G2) ");
	printf("X ");
		
	}
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria2; a++){
	printf("%c", furia);
	}
	
	}
	
	
	
	
	else if(gousmaE == 2){
		
		
	if(player1G1 == 0){
	SetConsoleTextAttribute(hConsole, 2);
	printf("  P1*GOUSMA(G1)   ");
	
	}
	if(player1G1 == 1){
	SetConsoleTextAttribute(hConsole, 8);
	printf("X");
	printf(" P1*GOUSMA(G1) ");
	printf("X ");
		
	}
	
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria1; a++){
	printf("%c", furia);
	}
	
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                   { P1*GOUSMA(G2) } ");
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria2; a++){
	printf("%c", furia);
	}
	}	
	//GOUSMA ESCOLHIDA
	SetConsoleTextAttribute(hConsole, 7);
	
	
	printf("\n                           X");
	
	
	//gousma1 p2	
	SetConsoleTextAttribute(hConsole, 4 );
	
	if(player2G1 == 0){
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                     P2*GOUSMA(G1)   ");
	}
	
	else if(player2G1 == 1){
	SetConsoleTextAttribute(hConsole, 8);	
	printf("\n                   X");	
	printf(" P2*GOUSMA(G1) ");
	printf("X ");
		
	}
	
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria3; a++){
	printf("%c", furia);
	}
	//gousma1 p2
	//gousma2 p2
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                   [ P2*GOUSMA(G2) ] ");
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria4; a++){
	printf("%c", furia);
	}
	SetConsoleTextAttribute(hConsole, 7);
	printf("  %c", 174);
	//gousma2 p2
	
	
	SetConsoleTextAttribute(hConsole, 11);
	printf("\n\n  %c DIVIDIR %c\n", 155, 155);
	SetConsoleTextAttribute(hConsole, 7);
			
		break;
	}
	}
	
	
	
	if(vez == 2){
		
	
	if(player1G1 == 1){
		naveg = 1;
	}else if(player1G2 == 1){
		naveg = 0;
	}		
			
				
	switch(naveg){
	case 0:
	//GOUSMA ESCOLHIDA	
	SetConsoleTextAttribute(hConsole, 4 );
	printf("\n { %c ATACAR %c } >> ", 158, 158);
	SetConsoleTextAttribute(hConsole, 2);
	
	if(gousmaE2 == 1){
	printf("{ P2*GOUSMA(G1) } ");
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria3; a++){
	printf("%c", furia);
	}
	
	if(player2G2 == 0){
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                     P2*GOUSMA(G2)   ");
	}
	
	else if(player2G2 == 1){
	SetConsoleTextAttribute(hConsole, 8);	
	printf("\n                   X");	
	printf(" P2*GOUSMA(G2) ");
	printf("X ");
		
	}
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria4; a++){
	printf("%c", furia);
	}
	
	}
	
	
	
	
	
	else if(gousmaE2 == 2){
		
		
		if(player2G1 == 0){
	SetConsoleTextAttribute(hConsole, 2);
	printf("  P2*GOUSMA(G1)   ");
	
	}
	if(player2G1 == 1){
	SetConsoleTextAttribute(hConsole, 8);
	printf("X");
	printf(" P2*GOUSMA(G1) ");
	printf("X ");
		
	}
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria3; a++){
	printf("%c", furia);
	}
	
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                   { P2*GOUSMA(G2) } ");
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria4; a++){
	printf("%c", furia);
	}
	}	
	
	
	//GOUSMA ESCOLHIDA
	SetConsoleTextAttribute(hConsole, 7);
	
	
	printf("\n                         X");
	
	
	//gousma1 p2	
	SetConsoleTextAttribute(hConsole, 4 );
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                   [ P1*GOUSMA(G1) ] ");
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria1; a++){
	printf("%c", furia);
	}
	SetConsoleTextAttribute(hConsole, 7);
	printf("  %c", 174);
	//gousma1 p2
	//gousma2 p2
	if(player1G2 == 0){
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                     P1*GOUSMA(G2)   ");
	}
	
	else if(player1G2 == 1){
	SetConsoleTextAttribute(hConsole, 8);	
	printf("\n                   X");	
	printf(" P1*GOUSMA(G2) ");
	printf("X ");
		
	}
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria2; a++){
	printf("%c", furia);
	}
	//gousma2 p2
	
	SetConsoleTextAttribute(hConsole, 11);
	printf("\n\n  %c DIVIDIR %c\n", 155, 155);
	SetConsoleTextAttribute(hConsole, 7);
	
		
		break;
	case 1:
		
	//GOUSMA ESCOLHIDA	
	SetConsoleTextAttribute(hConsole, 4 );
	printf("\n { %c ATACAR %c } >> ", 158, 158);
	SetConsoleTextAttribute(hConsole, 2);
	
	if(gousmaE2 == 1){
	printf("{ P2*GOUSMA(G1) } ");
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria3; a++){
	printf("%c", furia);
	}
	
	if(player2G2 == 0){
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                     P2*GOUSMA(G2)   ");
	}
	
	else if(player2G2 == 1){
	SetConsoleTextAttribute(hConsole, 8);	
	printf("\n                   X");	
	printf(" P2*GOUSMA(G2) ");
	printf("X ");
		
	}
	
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria4; a++){
	printf("%c", furia);
	}
	
	}
	
	
	
	
	
	else if(gousmaE2 == 2){
		
		
		if(player2G1 == 0){
	SetConsoleTextAttribute(hConsole, 2);
	printf("  P2*GOUSMA(G1)   ");
	
	}
	if(player2G1 == 1){
	SetConsoleTextAttribute(hConsole, 8);
	printf("X");
	printf(" P2*GOUSMA(G1) ");
	printf("X ");
		
	}
	
	
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria3; a++){
	printf("%c", furia);
	}
	
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                   { P2*GOUSMA(G2) } ");
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria4; a++){
	printf("%c", furia);
	}
	}	
	//GOUSMA ESCOLHIDA
	SetConsoleTextAttribute(hConsole, 7);
	
	
	printf("\n                         X");
	
	
	//gousma1 p2	
	SetConsoleTextAttribute(hConsole, 4 );
	if(player1G1 == 0){
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                     P1*GOUSMA(G1)   ");
	}
	
	else if(player1G1 == 1){
	SetConsoleTextAttribute(hConsole, 8);	
	printf("\n                   X");	
	printf(" P1*GOUSMA(G1) ");
	printf("X ");
		
	}
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria1; a++){
	printf("%c", furia);
	}
	//gousma1 p2
	//gousma2 p2
	SetConsoleTextAttribute(hConsole, 2);
	printf("\n                   [ P1*GOUSMA(G2) ] ");
	SetConsoleTextAttribute(hConsole, 4);
	for(int a = 0; a < Quantfuria2; a++){
	printf("%c", furia);
	}
	SetConsoleTextAttribute(hConsole, 7);
	printf("  %c", 174);
	//gousma2 p2
	
	
	SetConsoleTextAttribute(hConsole, 11);
	printf("\n\n  %c DIVIDIR %c\n", 155, 155);
	SetConsoleTextAttribute(hConsole, 7);
			
		break;
	}
	}
	
	}
	//escolher gosma que vai ser atacada
	//ATAQUE
	
	
	
	
	
	
	if(telaIniFim == 1){
		system("cls");
		
		if(Quantfuria1 >= 5 && Quantfuria2 >= 5){
		printf("\nPlayer 2 GANHOU\n");
		printf("\nPlayer 1 PERDEU TODAS GOUSMAS\n");
		}
		if(Quantfuria3 >= 5 && Quantfuria4 >= 5){
		printf("\nPlayer 1 GANHOU\n");
		printf("\nPlayer 2 PERDEU TODAS GOUSMAS\n");
		}
		
		printf("\n 1 - Tentar Novamente");
		printf("\n 2 - Voltar");
		
		
	}
	
	
	if(telaDIVIDIR == 1){
		
	if(naveg < 0){
		naveg = 1;
	}else if(naveg > 1){
		naveg = 0;
	}	
		
	switch(naveg)
	{
	
		
		case 0:
	SetConsoleTextAttribute(hConsole, 4 );
	printf("\n  %c ATACAR %c \n", 158, 158);
	SetConsoleTextAttribute(hConsole, 7);
	SetConsoleTextAttribute(hConsole, 11);
	printf("\n [ %c DIVIDIR %c ] >> CONFIRMACAO - S -\n                                  N  \n\n", 155, 155);
	SetConsoleTextAttribute(hConsole, 7);	
		break;
	case 1:
	SetConsoleTextAttribute(hConsole, 4);
	printf("\n  %c ATACAR %c\n", 158, 158);
	SetConsoleTextAttribute(hConsole, 11);
	printf("\n [ %c DIVIDIR %c ] >> CONFIRMACAO   S \n                                - N - \n\n", 155, 155);
	SetConsoleTextAttribute(hConsole, 7);
		break;
		
	}
	}
	
	if(telaIniFim != 1){
	SetConsoleTextAttribute(hConsole,0 | 96);
	printf("\n\n     NAVEGACAO:    \n\n");
	printf("     W > CIMA      \n");
	printf("     S > BAIXO     \n");
	printf("ENTER > CONFIRMACAO\n");
	printf(" Z > CANCELAR ACAO \n");
	SetConsoleTextAttribute(hConsole, 7);
	}
	
	
	
	
	
	
	
	
	
	r = 2;
	while(r >= 2){//loop teclas
	tecla = NULL;	
		
		if(kbhit()){
			tecla = getch();
		}
		
		
		
		if(tecla == 'w' || tecla == 'W'){
			naveg--;
			r=0;
		}if(tecla == 's' || tecla == 'S'){
			naveg++;
			r=0;
		}
		//CANCELAR ACAO
		if(tecla == 'Z' || tecla == 'z'){
			
			if(telaDIVIDIR != 0 || (telaIniFim == 0 && naveg == 1)){
			naveg = 1;
			}else {
			naveg = 0;	
			}
			telaIniFim = 0;
			telaAtaque = 0;
			telaDIVIDIR = 0;
			r=0;
		}
		//CANCELAR ACAO
		
		
		//NAVEGAR NAS TELAS
		//ACESSAR ATAQUE
		if(tecla == 13 && naveg == 0 && telaIniFim == 0){
			naveg = 0;
			telaIniFim = 2;
			telaAtaque = 2;
			r=0;
		}
		//ACESSAR ATAQUE
		//ACESSAR DIVISAO
		else if(tecla == 13 && naveg == 1 && telaIniFim == 0){
			naveg = 0;
			telaIniFim = 2;
			telaDIVIDIR = 1;
			r=0;
		}
		//ACESSAR DIVISAO
		//NAVEGAR NAS TELAS
		
		//dividir
		else if(telaDIVIDIR == 1 && naveg == 0 && tecla == 13){
			
			if((Quantfuria1 == Quantfuria2) || (Quantfuria3 == Quantfuria4)){
				printf("Divisao impossivel\n\n");
				system("pause");
				r=0;
			}
			else if((Quantfuria1 + Quantfuria2) % 2 == 0 && vez == 1){
				Quantfuria2 = Quantfuria1 = (Quantfuria1 + Quantfuria2) / 2;
				Quantfuria1 = Quantfuria2 = (Quantfuria1 + Quantfuria2) / 2;
				SetConsoleTextAttribute(hConsole, 4);
				printf("  FURIA 'PLAYER 1' DIVIDIDA\n\n");
				SetConsoleTextAttribute(hConsole, 7);
				system("pause");
				telaDIVIDIR = 0;
				telaIniFim = 0;
				vez = 2;
				r = 0;	
			}
			else if((Quantfuria3 + Quantfuria4) % 2 == 0 && vez == 2){
				Quantfuria4 = Quantfuria3 = (Quantfuria3 + Quantfuria4) / 2;
				Quantfuria3 = Quantfuria4 = (Quantfuria3 + Quantfuria4) / 2;
				SetConsoleTextAttribute(hConsole, 4);
				printf("  FURIA 'PLAYER 2' DIVIDIDA\n\n");
				SetConsoleTextAttribute(hConsole, 7);
				system("pause");
				telaDIVIDIR = 0;
				telaIniFim = 0;
				naveg = 1;
				vez = 1;
				r = 0;
			}
			else{
				printf("\n Valor Impar\n\n");
				system("pause");
				r=0;
			}
		}else if(telaDIVIDIR == 1 && naveg == 1 && tecla == 13){
			telaDIVIDIR = 0;
			telaIniFim = 0;
			r=0;
			
		}
		//dividir
		
		
		//gousma escolhida player 1 para atacar
		else if(tecla == 13 && naveg == 0 && telaAtaque == 2){
			naveg = 0;
			telaAtaque = 3;
			if(vez == 1){
			gousmaE = 1;
			}
			
			else if(vez == 2){
			gousmaE2 = 1;	
			}
			r=0;
		}else if(tecla == 13 && naveg == 1 && telaAtaque == 2){
			naveg = 0;
			telaAtaque = 3;
			if(vez == 1){
			gousmaE = 2;
			}
			
			else if(vez == 2){
			gousmaE2 = 2;	
			}
			r=0;
		}
		//gousma escolhida player 1 para atacar
		
		
		
		//gosma atacada p2g1(furia3)
		else if(tecla == 13 && naveg == 0 && telaAtaque == 3){
			naveg = 0;
			telaIniFim = 0;
			telaAtaque = 1;
			if(vez == 1){	
			if(gousmaE == 1){
				Quantfuria3 += Quantfuria1;
			}else if(gousmaE == 2){
				Quantfuria3 += Quantfuria2;
			}
			vez = 2;
			}else if(vez == 2){
			if(gousmaE2 == 1){
				Quantfuria1 += Quantfuria3;
			}else if(gousmaE2 == 2){
				Quantfuria1 += Quantfuria4;
			}
			vez = 1;
			}
			
			
			r=0;
			
		}
		//gosma atacada p2G2(furia4)
		else if(tecla == 13 && naveg == 1 && telaAtaque == 3){
			naveg = 0;
			telaIniFim = 0;
			telaAtaque = 1;
			
			if(vez == 1){	
			if(gousmaE == 1){
				Quantfuria4 += Quantfuria1;
				
			}else if(gousmaE == 2){
				Quantfuria4 += Quantfuria2;
				
			}
			vez = 2;
			}
			
			else if(vez == 2){
			if(gousmaE2 == 1){
				Quantfuria2 += Quantfuria3;
			}else if(gousmaE2 == 2){
				Quantfuria2 += Quantfuria4;
			}
			vez = 1;
			}
			
			r=0;
		}
		//gousma escolhida player 2 receber
		
		
		//gousma morta
		//player1
		if(Quantfuria1 >= 5){
			player1G1 = 1;
			Quantfuria1 = 5;
		}else{
			player1G1 = 0;
		}
		if(Quantfuria2 >= 5){
			player1G2 = 1;
			Quantfuria2 = 5;
		}else{
			player1G2 = 0;
		}
		//player1
		//player2
		if(Quantfuria3 >= 5){
			player2G1 = 1;
			Quantfuria3 = 5;
		}else{
			player2G1 = 0;
		}
		if(Quantfuria4 >= 5){
			player2G2 = 1;
			Quantfuria4 = 5;
		}else{
			player2G2 = 0;
		}
		//player2
		//gousma morta
	
		
		
		//JOGO ACABA	
		if((Quantfuria1 >= 5 && Quantfuria2 >= 5) || (Quantfuria3 >= 5 && Quantfuria4 >= 5)){
			telaAtaque = 4;
			telaIniFim = 1;
		}
		//JOGO ACABA
		
		//TENTAR NOVAMENTE
		if(tecla == '1' && telaIniFim == 1){
			telaAtaque = 1;
			break;
		}
		//TENTAR NOVAMENTE
		//VOLTAR
		if(tecla == '2' && telaIniFim == 1){
			break;
		}
		//VOLTAR
		
	}//loop teclas
	
	if(tecla == '1' && telaAtaque == 1){
		break;
	}
	
	if(tecla == '2'){
		break;
	}
	
	}
	if(tecla == '2'){
		
		break;
	}
	
	
	}//loop geral
	
	
}	

}
	
	
	
	
