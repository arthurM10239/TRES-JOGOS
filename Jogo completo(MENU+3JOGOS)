	tela[1][12] = '|';
	tela[2][10] = 192;
	tela[2][12] = 217;
	tela[0][11] = cima;
	tela[2][11] = 205;
	//mudar person 2
			
			
	}
	printf("\n");
	}
	
	r = 1; 	
		
	}//loop1
	
	
	//Condiçao para aparecer CABINE
	if(fase == 0 && (px == 3 && py == 5) && (px2 == 3 && py2 == 11)){
		SetConsoleTextAttribute(hConsole,15 | 128);
		printf("\nPLAYER 1/PLAYER 2 \n");
		printf("   [ CABINE ]     ");
