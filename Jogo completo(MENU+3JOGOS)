		printf("   [ CABINE ]     ");
		SetConsoleTextAttribute(hConsole,4 |112);
		printf("\n      1/2         \n");
		SetConsoleTextAttribute(hConsole,7);	
	}
	else if(fase == 0 &&  (px == 3 && (py == 5 || py == 11)) != (px2 == 3 && py2 == 11)){
		SetConsoleTextAttribute(hConsole,15 | 128);
		printf("\n    PLAYER 1      \n");
		printf("                  \n");
		printf("   [ CABINE ]     ");
		SetConsoleTextAttribute(hConsole,4 |112);
		printf("\n      1/2         \n");
		SetConsoleTextAttribute(hConsole,7);	
