	if(fase == 0 && (px == 1 && px2 == 1) && ((py == 5 || py == 11) && (py2 == 5 || py2 == 11))){//Maquina
		if(pont < 0){
			tecla = NULL;
			pont = 0;
		} 
		//person 1
		SetConsoleTextAttribute(hConsole, 128 | 14);
